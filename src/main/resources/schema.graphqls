schema {
    query: QueryType
}

type QueryType {
    getMonthlyPayments(month: YearMonth!): [MonthlySubscription]
    getMember(id: ID): Member
}

type MonthlySubscription {
    memberId: ID
    directDebitStatus: Boolean
    amount: MonetaryAmount
    member: Member
}

type Member {
    memberId: ID
}

scalar YearMonth
scalar MonetaryAmount
